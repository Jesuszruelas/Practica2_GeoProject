@model Practica2_GeoProject.Models.UbicationModel
@using System.Globalization

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-3 text-white fw-bold" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.6);">Buscador (OSM)</h1>
        <form asp-action="Index" method="get" class="d-flex justify-content-center mt-3 mb-4">
            <input type="text" name="address" 
                   placeholder="Ejemplo: Ciudad Obregón" 
                   class="form-control w-50 me-2 shadow-sm" 
                   value="@(Model?.Address != "Ubicación Seleccionada" ? Model?.Address : "")"/>
            <button type="submit" class="btn btn-primary shadow-sm"> Buscar</button>
        </form>
    </div>

    @if (Model != null && Model.Found)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-dark text-white">
                        Ubicación Actual
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@Model.Address</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">
                            Lat: @Model.Lat <br> Lon: @Model.Lon
                        </p>
                        
                        <hr />
                        <h6>Buscar cerca (1.5km):</h6>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", new { latActual = Model.Lat, lonActual = Model.Lon, buscarTipo = "pharmacy" })" class="btn btn-outline-danger btn-sm"> Farmacias</a>
                            <a href="@Url.Action("Index", new { latActual = Model.Lat, lonActual = Model.Lon, buscarTipo = "supermarket" })" class="btn btn-outline-warning btn-sm"> Supermercados</a>
                            <a href="@Url.Action("Index", new { latActual = Model.Lat, lonActual = Model.Lon, buscarTipo = "restaurant" })" class="btn btn-outline-success btn-sm"> Restaurantes</a>
                        </div>
                    </div>
                </div>

                @if (Model.FindedPlaces.Any())
                {
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">Resultados (@Model.FindedPlaces.Count)</div>
                        <ul class="list-group list-group-flush overflow-auto" style="max-height: 350px;">
                            @foreach (var lugar in Model.FindedPlaces)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <small>@lugar.Nombre</small>
                                    <span class="badge bg-secondary" style="font-size: 0.6rem;">@lugar.Tipo</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="col-md-8">
                <div id="map" class="shadow-sm border rounded" style="height: 500px; width: 100%; z-index: 1;"></div>
            </div>
        </div>

        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

        <script>
            // ---OBTENER COORDENADAS DESDE---
            // Usamos CultureInfo.InvariantCulture para asegurar formato "27.48" (con punto) y no "27,48" (con coma)
            var lat = @Model.Lat.ToString(CultureInfo.InvariantCulture);
            var lon = @Model.Lon.ToString(CultureInfo.InvariantCulture);
            var nombreUbicacion = "@Html.Raw(Model.Address)";

            var map = L.map('map').setView([lat, lon], 15); // Zoom 15

            //Cargar capa visual (OpenStreetMap)
            L.tileLayer('@Html.Raw(Model.TileLayerUrl)', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);

            //--- (TU UBICACIÓN) ---
            L.marker([lat, lon]).addTo(map)
                .bindPopup("<b>📍 Estás aquí:</b><br>" + nombreUbicacion)
                .openPopup();

            //---MARCADORES ROJOS (TIENDAS ENCONTRADAS)---
            // Este bucle recorre la listaen el Controlador
            @foreach (var lugar in Model.FindedPlaces)
            {
                if (lugar.Lat != 0 && lugar.Lon != 0)
                {
                    <text>
                    L.circleMarker([
                        @lugar.Lat.ToString(CultureInfo.InvariantCulture), 
                        @lugar.Lon.ToString(CultureInfo.InvariantCulture)
                    ], {
                        color: 'red',       // Borde rojo
                        fillColor: '#f03',  // Relleno rojo
                        fillOpacity: 0.5,
                        radius: 8
                    }).addTo(map)
                    .bindPopup("<b>@Html.Raw(lugar.Nombre)</b><br>@lugar.Tipo");
                    </text>
                }
            }
        </script>
    }
</div>